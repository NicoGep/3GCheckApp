<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="641dp"
        android:layout_height="665dp"
        app:srcCompat="@drawable/message_frame" />

    <LinearLayout
        android:layout_width="573dp"
        android:layout_height="644dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="13dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/checkedTxt"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:paddingStart="30sp"
            android:paddingTop="55sp"
            android:text="Überprüft wurde:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/detailsTxt"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:paddingStart="30sp"
            android:text="Vorname Nachname"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/certIsTxt"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:paddingStart="30sp"
            android:text="Das Zertifikat ist:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/validTxt"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:paddingStart="30sp"
            android:text="TextView"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/acceptButton"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/accept" />

    </LinearLayout>
</RelativeLayout>